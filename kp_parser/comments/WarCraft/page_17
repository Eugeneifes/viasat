    <meta itemprop="headline" content="Нам нужно больше золота!"/>

    <div itemprop="author" itemscope itemtype="http://schema.org/Person">
        <img src="https://st.kp.yandex.net/images/users/bsm_1503937-42-123295.jpg" width="46" alt="" title="" itemprop="image" />
