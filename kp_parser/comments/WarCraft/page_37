<div  class="response" id="div_review_2410344" itemprop="reviews" itemscope itemtype="http://schema.org/Review">
    
    <meta itemprop="headline" content="Свободу оркам"/>

    <div itemprop="author" itemscope itemtype="http://schema.org/Person">
        <img src="https://st.kp.yandex.net/images/users/bsm_2128832-49-847518.jpg" width="46" alt="" title="" itemprop="image" />
